<mujoco model="pendulum">
  <!-- Simple pendulum model -->
  <compiler angle="radian" inertiafromgeom="true"/>
  
  <option timestep="0.01" integrator="RK4" gravity="0 0 -9.81"/>
  
  <default>
    <joint damping="0.01"/>
    <geom contype="0" rgba="0.7 0.7 0.7 1"/>
  </default>
  
  <asset>
    <texture name="grid" type="2d" builtin="checker" width="512" height="512" rgb1="0.1 0.2 0.3" rgb2="0.2 0.3 0.4"/>
    <material name="grid" texture="grid" texrepeat="8 8" reflectance="0.2"/>
  </asset>
  
  <worldbody>
    <!-- Ground -->
    <geom name="floor" type="plane" pos="0 0 0" size="10 10 0.1" material="grid"/>
    <light pos="0 0 3" dir="0 0 -1" diffuse="0.8 0.8 0.8"/>
    
    <!-- Fixed anchor point -->
    <body name="anchor" pos="0 0 2">
      <geom name="anchor_geom" type="sphere" size="0.05" rgba="0.3 0.3 0.3 1"/>
      
      <!-- Pendulum arm -->
      <body name="pole" pos="0 0 0">
        <joint name="hinge" type="hinge" axis="0 1 0" limited="false"/>
        <geom name="rod" type="capsule" fromto="0 0 0 0 0 -1" size="0.03" rgba="0.2 0.6 0.9 1" mass="0.5"/>
        
        <!-- Pendulum bob -->
        <body name="bob" pos="0 0 -1">
          <geom name="bob_geom" type="sphere" size="0.12" rgba="0.9 0.4 0.2 1" mass="1"/>
        </body>
      </body>
    </body>
  </worldbody>
  
  <actuator>
    <motor name="torque" joint="hinge" gear="10" ctrllimited="true" ctrlrange="-5 5"/>
  </actuator>
  
  <sensor>
    <jointpos name="angle" joint="hinge"/>
    <jointvel name="angular_velocity" joint="hinge"/>
  </sensor>
</mujoco>

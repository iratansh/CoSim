<mujoco model="cartpole">
  <!-- Classic cartpole/inverted pendulum model -->
  <compiler angle="radian" inertiafromgeom="true"/>
  
  <option timestep="0.01" integrator="RK4"/>
  
  <default>
    <joint damping="0.05"/>
    <geom contype="0" friction="1 0.1 0.1" rgba="0.7 0.7 0.7 1"/>
  </default>
  
  <worldbody>
    <!-- Ground -->
    <geom name="floor" type="plane" pos="0 0 0" size="5 5 0.1" rgba="0.5 0.5 0.5 1"/>
    
    <!-- Rail -->
    <geom name="rail" type="capsule" fromto="-2 0 1 2 0 1" size="0.02" rgba="0.3 0.3 0.3 1"/>
    
    <!-- Cart -->
    <body name="cart" pos="0 0 1">
      <joint name="slider" type="slide" axis="1 0 0" limited="true" range="-2 2"/>
      <geom name="cart_geom" type="box" size="0.2 0.15 0.1" rgba="0.2 0.6 0.9 1" mass="1"/>
      
      <!-- Pole -->
      <body name="pole" pos="0 0 0">
        <joint name="hinge" type="hinge" axis="0 1 0" limited="false"/>
        <geom name="pole_geom" type="capsule" fromto="0 0 0 0 0 1" size="0.045" rgba="0.9 0.4 0.2 1" mass="0.1"/>
        <geom name="pole_tip" type="sphere" pos="0 0 1" size="0.08" rgba="0.9 0.2 0.2 1" mass="0.05"/>
      </body>
    </body>
  </worldbody>
  
  <actuator>
    <motor name="slide" joint="slider" gear="100" ctrllimited="true" ctrlrange="-50 50"/>
  </actuator>
  
  <sensor>
    <jointpos name="cart_position" joint="slider"/>
    <jointvel name="cart_velocity" joint="slider"/>
    <jointpos name="pole_angle" joint="hinge"/>
    <jointvel name="pole_angular_velocity" joint="hinge"/>
  </sensor>
</mujoco>

<?xml version="1.0"?>
<robot name="cartpole">
  <!-- Cart (base) -->
  <link name="cart">
    <visual>
      <geometry>
        <box size="0.4 0.2 0.1"/>
      </geometry>
      <origin xyz="0 0 0"/>
      <material name="green">
        <color rgba="0.2 0.8 0.3 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.4 0.2 0.1"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.015" ixy="0" ixz="0" iyy="0.015" iyz="0" izz="0.015"/>
    </inertial>
  </link>

  <!-- Pole -->
  <link name="pole">
    <visual>
      <geometry>
        <cylinder radius="0.02" length="1.0"/>
      </geometry>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <material name="blue">
        <color rgba="0.3 0.5 0.9 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.02" length="1.0"/>
      </geometry>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.025" ixy="0" ixz="0" iyy="0.025" iyz="0" izz="0.0001"/>
      <origin xyz="0 0 0.5"/>
    </inertial>
  </link>

  <!-- Pole mass (weight at end) -->
  <link name="pole_mass">
    <visual>
      <geometry>
        <sphere radius="0.08"/>
      </geometry>
      <material name="red">
        <color rgba="0.9 0.3 0.2 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.08"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Slider joint (cart moves along x-axis) -->
  <joint name="slider" type="prismatic">
    <parent link="world"/>
    <child link="cart"/>
    <axis xyz="1 0 0"/>
    <limit lower="-3.0" upper="3.0" effort="100.0" velocity="10.0"/>
    <dynamics damping="0.5"/>
  </joint>

  <!-- Hinge joint (pole rotates around y-axis) -->
  <joint name="hinge" type="continuous">
    <parent link="cart"/>
    <child link="pole"/>
    <axis xyz="0 1 0"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <dynamics damping="0.001" friction="0.001"/>
  </joint>

  <!-- Fixed joint for pole mass -->
  <joint name="pole_mass_joint" type="fixed">
    <parent link="pole"/>
    <child link="pole_mass"/>
    <origin xyz="0 0 1.0" rpy="0 0 0"/>
  </joint>

  <!-- Fixed base (world) -->
  <link name="world"/>
</robot>

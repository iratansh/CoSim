# Core settings
COSIM_ENVIRONMENT=development
COSIM_DEBUG=true

# Database
COSIM_DATABASE_URI=postgresql+asyncpg://cosim:cosim@localhost:5432/cosim

# Security
COSIM_JWT_SECRET_KEY=replace-with-32-char-secret
COSIM_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Service endpoints
COSIM_SERVICE_ENDPOINTS__AUTH_BASE_URL=http://localhost:8001
COSIM_SERVICE_ENDPOINTS__PROJECT_BASE_URL=http://localhost:8002
COSIM_SERVICE_ENDPOINTS__SESSION_BASE_URL=http://localhost:8003
COSIM_SERVICE_ENDPOINTS__COLLAB_BASE_URL=http://localhost:8004

# Observability
COSIM_NATS_URL=nats://localhost:4222

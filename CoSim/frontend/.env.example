# Auth0 Configuration
# Your Auth0 domain (e.g., dev-abc123.us.auth0.com)
VITE_AUTH0_DOMAIN=your-auth0-domain.auth0.com

# Your Auth0 Client ID from the application settings
VITE_AUTH0_CLIENT_ID=your-auth0-client-id

# The URL where Auth0 will redirect after authentication
VITE_AUTH0_CALLBACK_URL=http://localhost:5173/callback

# Your Auth0 API Audience (API Identifier)
VITE_AUTH0_AUDIENCE=https://api.cosim.dev

# The scope for Auth0 tokens
VITE_AUTH0_SCOPE=openid profile email

# API Configuration
# Base URL for API gateway (defaults to dev proxy when unset)
VITE_API_BASE_URL=/api

# Collaboration Server (Yjs WebSocket)
VITE_COLLAB_WS_URL=ws://localhost:1234

# WebRTC Signaling Server (for simulation streaming)
VITE_WEBRTC_SIGNALING_URL=ws://localhost:3000

# Optional: Enable debug logging
VITE_DEBUG=false

